{
  "name": "facility",
  "displayName": "Facility",
  "description": "灵巧、便捷",
  "version": "0.2.0",
  "author": "sillyY",
  "publisher": "sillyY",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": "https://github.com/sillyY/facility.git",
  "homepage": "https://github.com/sillyY/facility/blob/master/README.md",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "galleryBanner": {
    "color": "#3b9af6",
    "theme": "dark"
  },
  "keywords": [
    "facility",
    "template",
    "insert",
    "library"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "dist/extension",
  "contributes": {
    "commands": [
      {
        "command": "facility.views.explorer.stick",
        "title": "Stick Snippet",
        "category": "Facility"
      },
      {
        "command": "facility.save",
        "title": "Save Snippet",
        "category": "Facility",
        "icon": {
          "light": "images/light/save.svg",
          "dark": "images/dark/save.svg"
        }
      },
      {
        "command": "facility.paste",
        "title": "Paste Gist",
        "category": "Facility"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "facility",
          "title": "facility",
          "icon": "images/icon.svg"
        }
      ]
    },
    "views": {
      "facility": [
        {
          "id": "facility.views.explorer:facility",
          "name": "Explorer",
          "contextualTitle": "Facility",
          "icon": "repo"
        },
        {
          "id": "facility.views.outline:facility",
          "name": "Outline",
          "contextualTitle": "Facility",
          "icon": "repo"
        }
      ]
    },
    "menus": {
      "view/title": [],
      "view/item/context": [],
      "editor/title": [
        {
          "command": "facility.save",
          "group": "navigation"
        }
      ]
    },
    "configuration": [
      {
        "title": "Facility",
        "properties": {
          "facility.workspaceFolder": {
            "type": "string",
            "scope": "application",
            "description": "设置用于存储模板文件的工作区文件夹路径",
            "default": ""
          },
          "facility.keywords": {
            "type": "object",
            "default": null,
            "markdownDeprecationMessage": "Specifies which keywords will be added to which paste commands"
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run copy",
    "compile": "tsc -p ./",
    "copy": "node pack.js",
    "lint": "eslint src --ext ts",
    "watch": "webpack --watch --env.development --info-verbosity verbose",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/chokidar": "^2.1.3",
    "@types/fs-extra": "^8.1.0",
    "@types/glob": "^7.1.1",
    "@types/lodash": "^4.14.149",
    "@types/mkdirp": "^1.0.0",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.50.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-dir": "^1.2.0",
    "css-loader": "^3.5.3",
    "eslint": "^6.8.0",
    "fork-ts-checker-webpack-plugin": "^5.2.0",
    "glob": "^7.1.6",
    "html-webpack-plugin": "^4.5.0",
    "mini-css-extract-plugin": "^0.9.0",
    "mocha": "^7.0.1",
    "node-sass": "^4.14.1",
    "sass-loader": "^8.0.2",
    "terser-webpack-plugin": "^4.2.3",
    "ts-loader": "^8.0.5",
    "typescript": "^3.7.5",
    "url-loader": "^4.1.0",
    "vscode-test": "^1.3.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "chokidar": "^3.4.3",
    "fs-extra": "^9.0.0",
    "lodash": "^4.17.15",
    "mkdirp": "^1.0.3"
  }
}
