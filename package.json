{
  "name": "facility",
  "displayName": "Facility",
  "description": "灵巧、便捷",
  "version": "0.2.0",
  "author": "sillyY",
  "publisher": "sillyY",
  "license": "MIT",
  "icon": "resources/icon.png",
  "repository": "https://github.com/sillyY/facility.git",
  "homepage": "https://github.com/sillyY/facility/blob/master/README.md",
  "engines": {
    "vscode": "^1.43.0"
  },
  "categories": [
    "Other",
    "Snippets"
  ],
  "keywords": [
    "facility",
    "template",
    "insert"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "dist/extension",
  "contributes": {
    "commands": [
      {
        "command": "facility.view.settings",
        "title": "设置",
        "category": "Facility",
        "icon": {
          "light": "resources/light/settings.svg",
          "dark": "resources/dark/settings.svg"
        }
      },
      {
        "command": "facility.view.showSettings",
        "title": "打开设置页",
        "category": "Facility"
      },
      {
        "command": "facility.view.insert",
        "title": "插入",
        "category": "Facility"
      },
      {
        "command": "facility.view.edit",
        "title": "编辑",
        "category": "Facility"
      },
      {
        "command": "facility.view.rename",
        "title": "重命名",
        "category": "Facility"
      },
      {
        "command": "facility.view.delete",
        "title": "删除",
        "category": "Facility"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "facility",
          "title": "facility",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "facility": [
        {
          "id": "facility.view:explorer",
          "name": "模板库"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "facility.view.settings",
          "when": "view =~ /^facility\\.view/",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "facility.view.insert",
          "when": "view == facility.view:explorer && viewItem == facility:File"
        },
        {
          "command": "facility.view.edit",
          "when": "view == facility.view:explorer && viewItem == facility:File",
          "group": "1_modification"
        },
        {
          "command": "facility.view.rename",
          "when": "view == facility.view:explorer && viewItem == facility:Folder ||view == facility.view:explorer && viewItem == facility:File",
          "group": "1_modification"
        },
        {
          "command": "facility.view.delete",
          "when": "view == facility.view:explorer && viewItem == facility:Folder || view == facility.view:explorer && viewItem == facility:File",
          "group": "9_cutcopypaste"
        }
      ]
    },
    "configuration": [
      {
        "title": "Facility",
        "properties": {
          "facility.workspaceFolder": {
            "type": "string",
            "scope": "application",
            "description": "设置用于存储模板文件的工作区文件夹路径",
            "default": ""
          },
          "facility.toggleClick": {
            "type": "string",
            "description": "切换插入代码的点击方式",
            "default": "单击",
            "enum": [
              "单击",
              "双击"
            ],
            "enumDescriptions": [
              "单击插入代码",
              "双击插入代码"
            ]
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run copy",
    "compile": "tsc -p ./",
    "copy": "node pack.js",
    "lint": "eslint src --ext ts",
    "watch": "webpack --watch",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "watch-copy": "webpack --watch --env.development --info-verbosity verbose",
    "extension:watch": "webpack --watch --config ./config/dev.config.js",
    "webviews:watch": "webpack-dev-server --watch --config ./config/dev.config.js",
    "start:webview": "node scripts/start.js",
    "webview": "webpack --watch --config ./config/prod.config.js"
  },
  "devDependencies": {
    "@types/fs-extra": "^8.1.0",
    "@types/glob": "^7.1.1",
    "@types/lodash": "^4.14.149",
    "@types/mkdirp": "^1.0.0",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.11.7",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.7",
    "@types/vscode": "^1.43.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-dir": "^1.2.0",
    "css-loader": "^3.5.3",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mini-css-extract-plugin": "^0.9.0",
    "mocha": "^7.0.1",
    "node-sass": "^4.14.1",
    "sass-loader": "^8.0.2",
    "typescript": "^3.7.5",
    "url-loader": "^4.1.0",
    "vscode-test": "^1.3.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "fs-extra": "^9.0.0",
    "html-webpack-plugin": "^4.2.1",
    "lodash": "^4.17.15",
    "mkdirp": "^1.0.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
